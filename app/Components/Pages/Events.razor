                        <p class="text-white font-bold">12th December 2024</p>
                    </div>
                    <div class="event-actions flex gap-4 md:translate-y-full md:opacity-0 flex-wrap">
                        <a href="/events" class="btn btn-primary">Register</a>
                        <a href="/events" class="btn btn-secondary">Learn more <i class="fa-solid fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <a href="/events" class="hidden self-center md:flex flex-col w-16 h-16 rounded-full items-center border-2 border-black justify-center hover:bg-black hover:text-white bg-opacity-75 hover:bg-opacity-100 transition-all">
                All
                <i class="fa-solid fa-arrow-right"></i>
            </a>
        </div>
        <a href="/" class="link link-secondary mt-4 md:hidden self-center">View all</a>
    </div>
</section>

