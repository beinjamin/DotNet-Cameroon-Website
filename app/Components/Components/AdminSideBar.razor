@code{
    private string CollapsedClass = string.Empty;
    private bool _isCollapsed = false;
    private void ToggleExpand()
    {
        _isCollapsed = !_isCollapsed;
        CollapsedClass = _isCollapsed ? "collapsed" : string.Empty;
    }

    record LinkData(
        string Title,
        string Route
    );
}
